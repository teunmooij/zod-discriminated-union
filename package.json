{
  "name": "zod.discriminatedunion",
  "version": "1.0.1",
  "description": "DiscriminatedUnion schema for Zod",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/cjs/index.d.ts",
  "scripts": {
    "build": "rimraf dist && tsc --sourceMap false && tsc --sourceMap false -p tsconfig.esm.json",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --quiet --fix",
    "test": "jest -c jest.config.ts",
    "test:coverage": "jest -c jest.config.ts --verbose --collectCoverage",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-sort-class-members": "^1.16.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.0",
    "prettier": "^2.8.4",
    "rimraf": "^4.4.0",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "lint-staged": {
    "**/*.{js,ts}": "eslint --cache --fix",
    "**/*.{js,ts,md}": "prettier --write"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/teunmooij/zod-discriminated-union.git"
  },
  "keywords": [
    "zod",
    "schema",
    "validation",
    "discriminated union",
    "union"
  ],
  "author": "Teun Mooij",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/teunmooij/zod-discriminated-union/issues"
  },
  "homepage": "https://github.com/teunmooij/zod-discriminated-union#readme"
}
